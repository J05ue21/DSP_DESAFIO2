@model IEnumerable<ProyectDSP.Models.Productos>

@{
    ViewData["Title"] = "Lista de Productos";
}


<h2 class="mb-4">🛍 Productos Disponibles</h2>
<a class="btn btn-primary m-2" asp-controller="Productos" asp-action="Index">🗂 Ver Productos</a>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Precio</th>
            <th>Stock</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var producto in Model)
        {
            <tr>
                <td>@producto.Nombre</td>
                <td>@producto.Descripcion</td>
                <td>$@producto.Precio</td>
                <td>@producto.Stock</td>
            </tr>
        }
    </tbody>
</table>
<form asp-controller="Productos" asp-action="Index" method="get" class="mb-3">
    <div class="input-group">
        <input type="text" name="searchString" class="form-control" placeholder="Buscar producto..." />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
    </div>
</form>
